    "ajv": "^8.18.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "ink": "^5.2.0",
    "react": "^18.3.1",
    "zod": "^4.3.6"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
